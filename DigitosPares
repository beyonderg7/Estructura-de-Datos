#include "stdafx.h"
#include <iostream>
#include "conio.h"


using namespace std;

int main()
{
    int g,a,j=0;
    cout<<"Ingrese un numero porfavor"<<endl;
    cin>>a;
    while(a>0)
    {
        g=a%10;
        if(g%2==0)
        {
            cout<<"El digito par es: "<<" "<<g<<endl;
            j++;
        }

        a=a/10;
    }
    cout<<"La cantidad de digitos pares es: "<<endl;
    cout<<j<<endl;
    getch();
    return 0;
}
